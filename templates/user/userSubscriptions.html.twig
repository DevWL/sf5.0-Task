{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title }} ✅</h1>

    {% for sub in userSubscriptionArray %}
        <ul>
        <li>User: {{ sub.user.username }} | Id: {{ sub.user.id }}</li>
        <li>Subscription | id: {{ sub.id }}</li>
            {% if sub.status != 'stopped' %}
                <a href="{{ path('subscription_stop', {id: sub.id}) }}"><button class="btn btn-danger">stop</button></a>
            {% else %}
                <a href="{{ path('subscription_activate', {id: sub.id}) }}"><button class="btn btn-info">activate</button></a>
            {% endif %}
        <li>{{ sub.status }}</li>
        <li>started at: {{ sub.startedAt | date('Y-m-d') }}
            <li>Billing history</li>
            <ul>
                {% for subPay in sub.subscriptionPayments %}
                <li>id: {{ subPay.id }} | amount: {{ subPay.chargedamount }} zł | at: {{ subPay.date | date('Y-m-d') }}</li>
                {% endfor %}
                <a href="{{ path('subscription_payment', {id: sub.id}) }}"><button class="btn btn-success">pay</button></a>
            </ul>
        </ul>
    {% endfor %}

</div>
{% endblock %}
