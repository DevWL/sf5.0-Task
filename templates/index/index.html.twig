{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ title|raw }} âœ…</h1>

    {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col" id="cardNumber">
            {{ form_row(form.cardNumber) }}
        </div>
        {% if form.cardNumberMS is defined %}
            <div class="col" id="cardNumberMS">
                {{ form_row(form.cardNumberMS) }}
            </div>
        {% endif %}
        {% if form.cardNumberVI is defined %}
            <div class="col" id="cardNumberVI">
                {{ form_row(form.cardNumberVI) }}
            </div>
        {% endif %}
        {% if form.cardNumberAE is defined %}
            <div class="col" id="cardNumberAE">
                {{ form_row(form.cardNumberAE) }}
            </div>
        {% endif %}
        <div class="col" id="cvvNumber">
            {{ form_row(form.cvvNumber) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="cardType">
            {{ form_row(form.cardType) }}
        </div>
        <div class="col" id="package">
            {{ form_row(form.package) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="send">
            {{ form_row(form.send) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}